<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAlert"
    android:weightSum="2"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/box"
        android:layout_weight="1"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/layoutEdtFlightNumber"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_flight_number"/>

            <EditText
                android:id="@+id/edtFlightNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edt_bg"
                android:padding="8dp"
                android:alpha="0.5"
                />

        </LinearLayout>
        
        <Button
            android:id="@+id/btnStartPacking"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_below="@id/layoutEdtFlightNumber"
            android:layout_centerHorizontal="true"
            android:text="START PACKING"
            android:textSize="14sp"
            android:textColor="@color/text"
            android:background="@drawable/border_button"
            android:foreground="?android:selectableItemBackground"/>

    </RelativeLayout>

</LinearLayout>